<div class="container">
  <p>Latest Additions to Database</p>
    <div class="row">
      <% @dbvinyls.reverse.each do |vinyl| %>
        <div class="col-sm-2">
          <img src="<%=vinyl.image.image.url%>" height="100">

          <p>Artist: <a href='/database/<%=vinyl.slug_artist%>'><%= vinyl.artist %></a></p>
          <p>Album Name: <a href = '/database/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>'><%= vinyl.album_name %></a></p>
          <p>Created by: <%=User.find_by(id: vinyl.user_id).username%></p>
          <% if current_user.id == vinyl.user_id %>
            <p><a href='/database/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>/edit'>Edit</a></p>
          <% end %>
          <form method="POST" action="/user/add">
            <input type="hidden" name="artist" value="<%=vinyl.artist%>">
            <input type="hidden" name="album" value="<%=vinyl.album_name%>">
            <input type="submit" value="Add to Collection">
          </form>
        </div><!--end col-sm-1-->
      <%end%>
    </div><!--end row-->
</div><!--end container-->
