<div class="container" align="center">
  <h1><%=@user.username%>'s Vinyl Collection</h1>
</div><!--end container-->
<br>

<% if !@vinyls.empty? %>
  <div class="container-fluid">
    <div class="row">
      <% @vinyls.reverse.each do |vinyl| %>
        <div class="col-sm-2" align="center">
          <img src="<%=vinyl.user_image.image.url%>" height="300" class="thumbnail">
          <h3><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>"><%= vinyl.artist %></a></h3>
          <h3><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>"><%= vinyl.album_name %></a></h3>
          <a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>/edit">Edit</a>
        </div><!--end col-sm-4-->
      <% end %>
    </div><!-- end row-->
  </div> <!-- end class container -->
<% else %>
  <div class="container-fluid" align = "center">
    <p> Please add vinyl's to your collection!</p>
  </div><!--end container-fluid-->
<% end %>
