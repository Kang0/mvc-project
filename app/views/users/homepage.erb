<h1><%=@user.username%></h1>

  <h1>Welcome to your homepage</h1>

<% if !@vinyls.empty? %>
  <% @vinyls.reverse.each do |vinyl| %>
    <h3><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>"><%= vinyl.artist %></a></h3>
    <h3><a href="/user/<%=current_user.slug%>/<%=vinyl.slug_artist%>/<%=vinyl.slug_album%>"><%= vinyl.album_name %></a></h3>
    <img src="<%=vinyl.user_image.image.url%>">
  <% end %>
<% else %>
  <p> Please add vinyl's to your collection!</p>
<% end %>
